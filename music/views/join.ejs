<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/main.css">
  <link rel="stylesheet" href="/join.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dongle&family=Jua&display=swap" rel="stylesheet">

</head>

<div class="sub-body">
  <section class="join sec text-center">
    <form action="/join" method="post" id="join-form">
      <div class="container">
        <h2 class="title">🎶 회원 가입🎶</h2>
        <div class="row row-cols-1 join-wrap">
          <div class="col">
            <input type="text" name="username" id="username" value="" placeholder="아이디를 입력해주세요">
          </div>
          <div class="col">
            <input type="password" name="password" id="password" value="" placeholder="비밀번호를 입력해주세요">
          </div>
          <div class="col">
            <p class="error"></p>
          </div>
          <div class="col">
            <button type="submit" id="btn-join" class="btn btn-primary">확인</button>
            <button type="button" id="back" class="btn btn-dark">취소</button>
          </div>
        </div>
      </div>
    </form>
  </section>
</div>

  <script>
    let error_box = document.querySelector(".error");
    window.onload = function() {
      error_box.innerHTML = '';
    }

    let isJoined = ('<%= isJoined.message %>');
    console.log(isJoined);

    if (isJoined == "fail") {
        alert('이미 가입된 회원이 있습니다.');
    } else if (isJoined == "success") {
        alert("회원 가입이 완료되었습니다!");
        error_box.textContent = '';
        location.href="/login";
    }
  </script>
  <script src="js/join.js"></script>
</body>
</html>